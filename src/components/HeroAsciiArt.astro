<script>
  // Wrap each character in the ASCII art with a span for individual animation
  const asciiArt = document.querySelector(".hero-ascii-art pre");
  if (asciiArt) {
    const text = asciiArt.textContent;
    asciiArt.textContent = "";

    // Create a span for each character with staggered animation delay based on line
    let lineIndex = 0;
    text.split("").forEach((char, index) => {
      const span = document.createElement("span");
      span.textContent = char;

      // Calculate staggered delay based on line number (vertical position)
      const delay = lineIndex / 0.5 + index * 5;
      span.style.animation = "fadeInOut 5s linear infinite";
      span.style.animationDelay = `-${delay}ms`;

      asciiArt.appendChild(span);

      // Track which line we're on (increment after setting delay)
      if (char === "\n") {
        lineIndex++;
      }
    });
  }
</script>
