import BaseLayout from "../layouts/BaseLayout.astro";
const currentYear = new Date().getFullYear();
---

<BaseLayout title="angus.dev - Angus Lam">
  <div class="page-wrapper">
    <div class="hero-section">
      <div class="hero-ascii-art">
        <pre>
